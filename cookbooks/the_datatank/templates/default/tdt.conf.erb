# Override the Apache User (vhosts are included at the end of apache2.conf)
User vagrant
Group vagrant

<VirtualHost *:80>

  ServerName tdt.hub.dev

  DocumentRoot <%= node['apache']['docroot_dir'] %>
  <Directory <%= node['apache']['docroot_dir'] %>>
    AllowOverride All
    Options Indexes FollowSymLinks MultiViews
    Require all granted
  </Directory>
  
  # Possible values include: debug, info, notice, warn, error, crit,
  # alert, emerg.
  LogLevel warn

  ServerAdmin webmaster@localhost
  ErrorLog /var/log/apache2/datatank.lo.error.log
  CustomLog /var/log/apache2/datatank.lo.custom.log combined
</VirtualHost>